<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:columnCount="4"
        android:rowCount="8"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:layout_columnSpan="4"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:layout_columnSpan="4"
            android:gravity="right"
            />
        <Button
            android:id="@+id/op4"
            android:layout_gravity="fill"
            android:background="#0000000"
            android:text="C"
            android:textColor="#EF1B1B"
            android:textSize="40sp" />

        <Button
            android:id="@+id/op5"
            android:layout_gravity="fill"
            android:background="#0000000"
            android:text="⇦"
            android:textColor="#F33030"
            android:textSize="40sp" />

        <Button
            android:id="@+id/op1"
            android:layout_gravity="fill"
            android:background="#0000000"
            android:text="("
            android:textColor="#97EC88"
            android:textSize="40sp" />

        <Button
            android:id="@+id/op2"
            android:layout_gravity="fill"
            android:background="#0000000"
            android:text=")"
            android:textColor="#97EC88"
            android:textSize="40sp" />
        <Button
            android:layout_gravity="fill"
            android:id="@+id/num1"
            android:text="1"
            android:textSize="40sp"
            android:background="#0000000"/>

        <Button
            android:layout_gravity="fill"
            android:id="@+id/num2"
            android:text="2"
            android:textSize="40sp"
            android:background="#0000000"/>

        <Button
            android:id="@+id/num3"
            android:layout_gravity="fill"
            android:text="3"
            android:textSize="40sp"
            android:background="#0000000"/>

        <Button
            android:id="@+id/op3"
            android:layout_gravity="fill"
            android:background="#0000000"
            android:text="+"
            android:textColor="#EF9712"
            android:textSize="40sp" />

        <Button
            android:id="@+id/num4"
            android:layout_gravity="fill"
            android:text="4"
            android:textSize="40sp"
            android:background="#0000000"/>
        <Button
            android:id="@+id/num5"
            android:layout_gravity="fill"
            android:text="5"
            android:textSize="40sp"
            android:background="#0000000"/>

        <Button
            android:id="@+id/num6"
            android:layout_gravity="fill"
            android:text="6"
            android:textSize="40sp"
            android:background="#0000000"/>

        <Button
            android:id="@+id/op6"
            android:layout_gravity="fill"
            android:background="#0000000"
            android:text="-"
            android:textColor="#EF9712"
            android:textSize="40sp" />
        <Button
            android:id="@+id/num7"
            android:layout_gravity="fill"
            android:text="7"
            android:textSize="40sp"
            android:background="#0000000"/>
        <Button
            android:id="@+id/num8"
            android:layout_gravity="fill"
            android:textSize="40sp"
            android:text="8"
            android:background="#0000000"/>
        <Button
            android:id="@+id/num9"
            android:layout_gravity="fill"
            android:text="9"
            android:textSize="40sp"
            android:background="#0000000"/>

        <Button
            android:id="@+id/op7"
            android:layout_gravity="fill"
            android:background="#0000000"
            android:text="x"
            android:textAllCaps="false"
            android:textColor="#EF9712"
            android:textSize="40sp" />

        <Button
            android:id="@+id/num10"
            android:layout_gravity="fill"
            android:text="."
            android:textSize="40sp"
            android:background="#0000000"/>

        <Button
            android:id="@+id/num11"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:text="0"
            android:textSize="40sp"
            android:background="#0000000"/>

        <Button
            android:id="@+id/num12"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:background="#0000000"
            android:text="e"
            android:textAllCaps="false"
            android:textSize="40sp" />

        <Button
            android:id="@+id/op8"
            android:layout_gravity="fill"
            android:background="#0000000"
            android:text="÷"
            android:textAllCaps="false"
            android:textColor="#EF9712"
            android:textSize="40sp" />

        <Button
            android:id="@+id/op9"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:background="#3F51B5"
            android:text="="
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="43sp" />
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>