<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/g1"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="85sp"
            android:gravity="right"
            android:maxLines="1"
            android:scrollbars="horizontal"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:gravity="right"
            android:maxLines="1"
            android:scrollbars="horizontal"
            android:textSize="65sp"
            />
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:columnCount="8"
        android:rowCount="4"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:id="@+id/g1"
        >


        <Button
            android:id="@+id/op1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="C"
            android:textColor="#EF1B1B"
            android:textSize="50sp" />

        <Button
            android:id="@+id/op2"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="⇦"
            android:textColor="#F33030"
            android:textSize="50sp" />

        <Button
            android:id="@+id/op3"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="("
            android:textColor="#97EC88"
            android:textSize="50sp" />

        <Button
            android:id="@+id/op4"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text=")"
            android:textColor="#97EC88"
            android:textSize="50sp" />

        <Button
            android:id="@+id/op5"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="+"
            android:textColor="#EF9712"
            android:textSize="50sp" />

        <Button
            android:id="@+id/op6"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="-"
            android:textColor="#EF9712"
            android:textSize="50sp" />

        <Button
            android:id="@+id/op7"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="x"
            android:textAllCaps="false"
            android:textColor="#EF9712"
            android:textSize="50sp" />

        <Button
            android:id="@+id/op8"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="÷"
            android:textAllCaps="false"
            android:textColor="#EF9712"
            android:textSize="50sp" />
        <Button
            android:id="@+id/num1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="1"
            android:textColor="#717171"
            android:textSize="50sp" />


        <Button
            android:id="@+id/num2"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="2"
            android:textColor="#717171"
            android:textSize="50sp" />

        <Button
            android:id="@+id/num3"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="3"
            android:textColor="#717171"
            android:textSize="50sp" />



        <Button
            android:id="@+id/num4"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="4"
            android:textColor="#717171"
            android:textSize="50sp" />

        <Button
            android:id="@+id/num5"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="5"
            android:textColor="#717171"
            android:textSize="50sp" />

        <Button
            android:id="@+id/num6"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="6"
            android:textColor="#717171"
            android:textSize="50sp" />


        <Button
            android:id="@+id/num7"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="7"
            android:textColor="#717171"
            android:textSize="50sp" />

        <Button
            android:id="@+id/num8"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="8"
            android:textColor="#717171"
            android:textSize="50sp" />

        <Button
            android:id="@+id/num9"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="9"
            android:textColor="#717171"
            android:textSize="50sp" />


        <Button
            android:id="@+id/num10"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="."
            android:textColor="#717171"
            android:textSize="50sp" />

        <Button
            android:id="@+id/num11"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="0"
            android:textColor="#717171"
            android:textSize="50sp" />

        <Button
            android:id="@+id/num12"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="00"
            android:textAllCaps="false"
            android:textColor="#717171"
            android:textSize="50sp" />


        <Button
            android:id="@+id/op9"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:background="#20B8F3"
            android:text="="
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="55sp" />
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>